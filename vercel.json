{
    "version": 2,
    "builds": [{
            "src": "frontEnd/**",
            "use": "@vercel/static-build",
            "config": { "distDir": "frontEnd/build" }
        },
        {
            "src": "backEnd/**",
            "use": "@vercel/node",
            "config": {
                "maxDuration": 300,
                "buildCommand": "npm run vercel-build",
                "output": "dist"
            }
        }
    ],
    "routes": [
        { "src": "/api/(.*)", "dest": "backEnd/$1" },
        { "src": "/(.*)", "dest": "frontEnd/$1" }
    ]
}